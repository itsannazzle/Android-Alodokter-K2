<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/spacing_206"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/primary"
    android:padding="@dimen/spacing_10">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/ivProfil"
        android:layout_width="@dimen/spacing_80"
        android:layout_height="@dimen/spacing_80"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/spacing_14"
        android:layout_marginTop="@dimen/spacing_50"
        android:src="@drawable/imageprofile"
        android:contentDescription="@string/label_foto_profil"/>

    <TextView
        android:id="@+id/tvHelloUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/spacing_14"
        android:textSize="@dimen/font_24"
        android:fontFamily="@font/plus_jakarta_display_medium"
        android:textColor="@color/white"
        android:text="@string/label_hello"/>

</androidx.constraintlayout.widget.ConstraintLayout>