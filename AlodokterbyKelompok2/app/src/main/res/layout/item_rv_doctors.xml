<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/spacing_10"
    app:cardElevation="@dimen/spacing_3"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/rounded"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing_10"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginVertical="@dimen/spacing_10"
            app:layout_constraintHorizontal_weight="3"
            android:layout_marginStart="@dimen/spacing_6"
            app:cardCornerRadius="@dimen/spacing_10"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/ivPictureDoctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/image_article"
                android:scaleType="centerCrop"
                android:contentDescription="@string/content_desc_image_article"/>

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tvNamadokter"
            android:layout_width="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/nip"
            android:layout_marginTop="@dimen/spacing_16"
            android:layout_height="wrap_content"
            android:text="@string/namadokter"
            app:layout_constraintStart_toEndOf="@id/rounded"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/plus_jakarta_text_bold"
            android:lines="1"
            android:layout_marginStart="@dimen/spacing_16"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/nip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/rounded"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="@dimen/font_12"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/tvNamadokter"
            app:layout_constraintBottom_toTopOf="@id/spesialis"
            android:layout_marginStart="@dimen/spacing_16"
            android:text="@string/label_NIP"/>

        <TextView
            android:id="@+id/spesialis"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/spesialis"
            app:layout_constraintTop_toBottomOf="@id/nip"
            app:layout_constraintBottom_toTopOf="@id/bintangkecil1"
            app:layout_constraintStart_toEndOf="@id/rounded"
            android:layout_marginStart="@dimen/spacing_16"
            android:textSize="@dimen/font_12"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/bintangkecil1"
            android:src="@drawable/ic_bintangkecil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/spesialis"
            app:layout_constraintStart_toEndOf="@id/rounded"
            android:layout_marginStart="@dimen/spacing_16"
            android:layout_marginTop="@dimen/spacing_6"
            android:layout_marginBottom="@dimen/spacing_16"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/bintangkecil2"
            android:src="@drawable/ic_bintangkecil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/spesialis"
            app:layout_constraintStart_toEndOf="@id/bintangkecil1"
            android:layout_marginStart="@dimen/spacing_6"
            android:layout_marginTop="@dimen/spacing_6"
            android:layout_marginBottom="@dimen/spacing_16"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <ImageView
            android:id="@+id/bintangkecil3"
            android:src="@drawable/ic_bintangkecil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/spesialis"
            app:layout_constraintStart_toEndOf="@id/bintangkecil2"
            android:layout_marginStart="@dimen/spacing_6"
            android:layout_marginTop="@dimen/spacing_6"
            android:layout_marginBottom="@dimen/spacing_16"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/bintangkecil4"
            android:src="@drawable/ic_bintangkecil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/spesialis"
            app:layout_constraintStart_toEndOf="@id/bintangkecil3"
            android:layout_marginStart="@dimen/spacing_6"
            android:layout_marginTop="@dimen/spacing_6"
            android:layout_marginBottom="@dimen/spacing_16"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/bintangkecil5"
            android:src="@drawable/ic_bintangkecil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/spesialis"
            app:layout_constraintStart_toEndOf="@id/bintangkecil4"
            android:layout_marginStart="@dimen/spacing_6"
            android:layout_marginTop="@dimen/spacing_6"
            android:layout_marginBottom="@dimen/spacing_16"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reviews"
            android:layout_marginTop="@dimen/spacing_6"
            app:layout_constraintStart_toEndOf="@id/bintangkecil5"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/spacing_16"
            android:textSize="@dimen/font_8"
            app:layout_constraintTop_toBottomOf="@id/spesialis"
            android:layout_marginStart="@dimen/spacing_6"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_years_of_experience"
            app:layout_constraintStart_toEndOf="@id/review"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/spacing_16"
            android:layout_marginTop="@dimen/spacing_6"
            android:textSize="@dimen/font_8"
            app:layout_constraintTop_toBottomOf="@id/spesialis"
            android:layout_marginStart="@dimen/spacing_2"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>